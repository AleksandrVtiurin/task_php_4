<?php
declare(strict_types=1);

const OPERATION_EXIT = 0;
const OPERATION_ADD = 1;
const OPERATION_DELETE = 2;
const OPERATION_PRINT = 3;

function getAvailableOperations(): array
{
    return [
        OPERATION_EXIT => OPERATION_EXIT . '. Завершить программу.',
        OPERATION_ADD => OPERATION_ADD . '. Добавить товар в список покупок.',
        OPERATION_DELETE => OPERATION_DELETE . '. Удалить товар из списка покупок.',
        OPERATION_PRINT => OPERATION_PRINT . '. Отобразить список покупок.',
    ];
}

function displayShoppingList(array $items): void
{
    if (count($items) > 0) {
        echo 'Ваш список покупок: ' . PHP_EOL;
        echo implode(PHP_EOL, $items) . PHP_EOL;
    } else {
        echo 'Ваш список покупок пуст.' . PHP_EOL;
    }
}

function getOperationNumber(array $items): int
{
    $operations = getAvailableOperations();
    if (count($items) === 0) {
        unset($operations[OPERATION_DELETE]);
    }
    
    while (true) {
        system('clear');
        
        displayShoppingList($items);
        
        echo 'Выберите операцию для выполнения: ' . PHP_EOL;
        echo implode(PHP_EOL, $operations) . PHP_EOL . '> ';
        
        $input = trim(fgets(STDIN));
        $operationNumber = is_numeric($input) ? (int)$input : -1;
        
        if (array_key_exists($operationNumber, $operations)) {
            return $operationNumber;
        }
        
        system('clear');
        echo '!!! Неизвестный номер операции, повторите попытку.' . PHP_EOL;
    }
}

function addItem(array $items): array
{
    echo "Введите название товара для добавления в список: \n> ";
    $itemName = trim(fgets(STDIN));
    
    if (!empty($itemName)) {
        $items[] = $itemName;
        echo "Товар '{$itemName}' добавлен в список." . PHP_EOL;
    } else {
        echo "Нельзя добавить пустой товар." . PHP_EOL;
    }
    
    return $items;
}

function deleteItem(array $items): array
{
    displayShoppingList($items);
    
    echo 'Введите название товара для удаления из списка:' . PHP_EOL . '> ';
    $itemName = trim(fgets(STDIN));
    
    if (in_array($itemName, $items, true)) {
        $items = array_values(array_filter($items, function($item) use ($itemName) {
            return $item !== $itemName;
        }));
        echo "Товар '{$itemName}' удален из списка." . PHP_EOL;
    } else {
        echo "Товар '{$itemName}' не найден в списке." . PHP_EOL;
    }
    
    return $items;
}

function printItems(array $items): void
{
    displayShoppingList($items);
    
    if (count($items) > 0) {
        echo 'Всего ' . count($items) . ' позиций. ' . PHP_EOL;
    }
    
    echo 'Нажмите enter для продолжения';
    fgets(STDIN);
}

$items = [];
$operations = getAvailableOperations();

do {
    $operationNumber = getOperationNumber($items);
    
    echo 'Выбрана операция: ' . $operations[$operationNumber] . PHP_EOL;
    
    switch ($operationNumber) {
        case OPERATION_ADD:
            $items = addItem($items);
            break;
            
        case OPERATION_DELETE:
            if (count($items) > 0) {
                $items = deleteItem($items);
            }
            break;
            
        case OPERATION_PRINT:
            printItems($items);
            break;
    }
    
    echo "\n ----- \n";
} while ($operationNumber > 0);

echo 'Программа завершена' . PHP_EOL;
